<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Manage your project</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=mrkz9axrxc8l71hpd222kl37jscctz9w288gv1ek45zrb48t"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
  <script>
    tinymce.init({
      selector:'textarea',
      plugins : 'advlist autolink link image lists charmap print preview'
    });
    var array_team_members = [];
    function retrieveUserInformations(team_member_identifier){
    	jQuery.post('/user/retrieveInfo/', {
    		emailUser : team_member_identifier
    	}).done(function(data){
    		if(data != 0) {
    		  //Append email to list
    			$("#team_members_list").append("<li id=\""+ team_member_identifier +"\">" + team_member_identifier + "</li>");
          //Make the field blank
          $('#project-team-members').val("");
    			//Create user object and append it to array
    			var obj = {};
    			var sub_obj = {};
          //da controllare i valori che riceviamo
    			obj['name'] = data.credentials.name;
    			obj['surname'] = data.credentials.surname;
    			obj['photo'] = sub_obj;
    			obj['email'] = data.email;
    			obj['role'] = data.role;

    			array_team_members.push(obj);
    		}
    		else {
    			bootbox.alert("User doesn't exist !");
    			$('#project-team-members').val("");
    		}
    	}).fail(function(){
    		  bootbox.alert("An error occurred during the operation !");
    	});
    }
    $(document).ready(function() {
      $('#btn_add_team_member').click(function() {
      	var team_member_identifier = $('#project-team-members').val();
      	if ($("#team_members_list li:contains('" + team_member_identifier + "')").length>0) {
      		bootbox.alert("This element already exists");
        }
      	else {
      		if(team_member_identifier == "")
      			bootbox.alert("Please insert a team member email!");
      		else {
            //retrieveUserInformation(team_member_identifier);
            //example - to do in above function $("#team_members_list").append("<li id=\""+ team_member_identifier +"\">" + team_member_identifier + "</li>");
          }
      	}
      });
    });
  </script>
  <style>
    .top5 { margin-top:5px; }
    .top7 { margin-top:7px; }
    .top10 { margin-top:10px; }
    .top15 { margin-top:15px; }
    .top17 { margin-top:17px; }
    .top20 { margin-top:20px; }
    .top25 { margin-top:25px; }
    .top30 { margin-top:30px; }
    .bottom5 { margin-bottom:5px; }
    .bottom7 { margin-bottom:7px; }
    .bottom10 { margin-bottom:10px; }
    .bottom15 { margin-bottom:15px; }
    .bottom17 { margin-bottom:17px; }
    .bottom20 { margin-bottom:20px; }
    .bottom25 { margin-bottom:25px; }
    .bottom30 { margin-bottom:30px; }
    .btn-xl {
      padding: 18px 28px;
      font-size: 22px;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="panel panel-primary">
    	<div class="panel-heading text-center">
    		<h3>The simplest way to manage and view the projects you created</h3>
    	</div>
    	<div class="panel-body">
        <div class="panel-heading text-center">
    	      <h4>PROJECT DETAILS</h4>
    		</div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-addon input-lg" id="basic-addon-project-name">Project Name</span>
          <input id="project-name" type="text" class="form-control input-lg" placeholder="Project Name" aria-describedby="basic-addon1">
        </div>
      </div>
    </div>
    <div class="row top25">
      <div class="col-md-6">
        <div class="form-group">
          <label for="description">Project Description:</label>
          <textarea class="form-control" rows="5" id="project-description"></textarea>
        </div>
      </div>
    </div>
    <div class="row top25">
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-addon input-lg" id="basic-addon-project-budget">Budget</span>
          <input id="project-budget" type="text" class="form-control input-lg" placeholder="Budget" aria-describedby="basic-addon1">
        </div>
      </div>
    </div>
    <div class="row top25">
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-addon input-lg" id="basic-addon-project-team-members">Team Members</span>
          <input id="project-team-members" type="text" class="form-control input-lg" placeholder="Type team member email here..." aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="col-md-1">
        <button id="btn_add_team_member" type="button" class="btn btn-primary btn-lg" aria-label="Right Align">
          <span class="glyphicon glyphicon-edit">Add</span>
				</button>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <ol id="team_members_list" class="custom-counter">
        </ol>
      </div>
    </div>
    <div class="row top25">
      <button id="save-button" type="button" class="btn btn-primary btn-lg btn-block">Save the new project</button>
    </div>
  </div>
</body>
</html>
